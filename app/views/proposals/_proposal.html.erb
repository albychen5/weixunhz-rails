<div class="card">
	<!-- Title of Proposal -->
	<div class="card-content">
		<div class="row ">
			<div class="col s12 l12">
				<span class="card-title"><%= proposal.name %></span>
				<p><%= proposal.info %></p>
			</div>
		</div>

<!-- 		<div class="row">
			<div class="col s11 offset-s1">
			Created by: <%#= proposal.user.username %>
			</div>
		</div> -->

		<div class="row valign-wrapper">
			<div class="col s4 chip valign center-align">
			<%= proposal.votes_for.size %> <%= fa_icon "heart" %>
			</div>
			<div class="col s4 center-align">
			<%= button_to 'Like', like_proposal_path(proposal), method: :get, class: "amber lighten-2 btn" %>
			</div>
			<div class="col s4 center-align">
			<%= button_to 'Edit', edit_proposal_path(proposal), method: :get, class: "amber lighten-2 btn" %>
			</div>
		</div>
	</div>
</div>