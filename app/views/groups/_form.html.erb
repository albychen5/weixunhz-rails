<div class="panel panel-default">
  <div class="panel-body">
    <%= simple_form_for @group do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :info %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary btn-block' %>
    </div>
    <% end %>
  </div>
</div>