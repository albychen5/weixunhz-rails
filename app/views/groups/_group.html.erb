<div class="card">
	<!-- Group Name -->
	<div class="card-content">
		<span class="card-title"><%= link_to group.name, group_path(group) %></span>
		<p><%= group.info %></p>
	</div>
	<div class="divider"></div>
	<!-- Group Quickview -->
	<div class="card-content">
		<h5>Group Statistics</h5>
		<p><%= group.users.size %> Users</p>
		<p><%= group.events.size %> Events</p>
		<p><%= group.proposals.size %> Proposals</p>
	</div>
</div>