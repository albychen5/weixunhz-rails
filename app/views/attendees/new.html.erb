<div class="row">
  <div class="col s12 m6 offset-m3">
    <div class="card">
      <div class="card-content">
      <span class="card-title">Register for <%= @event.name %></span>
        <%= form_for(@attendee, url: event_attendees_path, method: :post) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>

        <%= f.submit "Add Attendee", class: "btn waves-effect waves-light" %>
        <% end %>
      </div>
    </div>
    <%= button_to 'Back', event_attendees_path(@event),  method: :get, class: "btn waves-effect waves-light" %>
  </div>
</div>