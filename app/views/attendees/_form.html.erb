<div class="row">
  <div class="col s12 m6 offset-m3">
    <%= form_for(@attendee, url: event_attendees_path, method: :post) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>

      <%= f.submit "Add Attendee", class: "btn waves-effect waves-light" %>
    <% end %>
  </div>
</div>