<% @title = "Attendees for " + @event.name %>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Attendees for <%= @event.name %></span>

        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone Number</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @attendees.each do |attendee| %>
            <tr>
              <td><%= attendee.name %></td>
              <td><%= attendee.phone_number %></td>
              <td><%= link_to 'Edit', edit_event_attendee_path(@event, attendee) %></td>
              <td><%#= link_to 'Destroy', attendee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
    <%= button_to 'New attendee', new_event_attendee_path,  method: :get, class: "btn waves-effect waves-light" %>
  </div>
</div>  