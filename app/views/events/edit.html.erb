<div class="text-center">
  <%= image_tag @event.image.url(:medium) %>
</div>
<div class="form-wrapper">
  <%= simple_form_for @event, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :image %>
    </div>
    <div class="form-group text-center">
      <%= f.input :name %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
  <% end %>
</div>
<div class="text-center edit-links">
  <%= link_to "Delete event", event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" } %>
  |
  <%= link_to "cancel", events_path %>
</div>
