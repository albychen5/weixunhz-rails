<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-content">
      <div class="center-align"><span class="card-title">Create a New Event</span></div>
        <%= simple_form_for [@group, @event], html: { multipart: true } do |f| %>

        <!-- Error Section -->
        <div class="row">
        <div class="col s12 m10 offset-m1 center-align">
          <%= f.error_notification %>
          <% if @event.errors.any? %>
          <ul>
            <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>
        </div>
        </div>

        <!-- Form Section -->
        <div class="row">
            <%= f.input :image, label: 'Add Cover Image', input_html: { onChange: 'loadFile(event)' }, wrapper_html: { class: 'm10 s12 offset-m1' } %>
            <%= f.input :group_id, collection: @groups, label_method: :name, label: "Select a group", selected: @event.group_id, wrapper_html: { class: 'm10 s12 offset-m1' } %>
           <%#= f.collection_select :group_id, Group.all, :id, :name, { prompt: "Choose a group" }, wrapper_html: { class: 'm8 s12 offset-m2' } %>
            <%= f.input :name, label: 'Add your event name', placeholder: false , wrapper_html: { class: 'm10 s12 offset-m1' } %>
            <%= f.input :location, label: 'Add your event location', placeholder: false, wrapper_html: { class: 'm10 s12 offset-m1' } %>
            <%= f.input :date, label: 'Date of event: ', wrapper_html: { class: 'm10 s12 offset-m1' } %>
            <%#= f.input :event_time, label: 'Time of event: ', wrapper_html: { class: 'm10 s12 offset-m1' } %>
            <%= f.input :details, label: 'Add your event info (time, links)', placeholder: false, wrapper_html: { class: 'm10 s12 offset-m1' } %>
            <div class="row">
            <div class="col s12 offset-s3 offset-m4">
            <%= f.button :submit, class: 'btn-success btn-block'%>
            </div>
            </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>