<div class="events-wrapper row">
  <div class="event">
    <div class="event-head">
      <div class="name">
        Albert Chen
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @event.image.url(:medium) %>
    </div>
    <p class="name">
      <%= @event.name %>
    </p>
    <div class="text-center edit-links">
      <%= link_to "Cancel", events_path %>
      |
      <%= link_to "Edit event", edit_event_path(@event) %>
    </div>
  </div>
</div>
