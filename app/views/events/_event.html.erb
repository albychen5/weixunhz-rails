<div class="events-wrapper">
  <div class="event">
    <div class="event-head">
      <div class="thumb-img"></div>
      <div class="username">
        <%= link_to event.user.username, profile_path(event.user.username) %>
      </div>
      <div class="time-ago">
        <%= time_ago_in_words event.created_at %>
      </div>
    </div>
    <div class="image center-block">
      <%= link_to (image_tag event.image.url(:medium), class:'img-responsive'), event_path(event) %>
    </div>
    <div class="event-bottom">
      <%= render 'events/likes', event: event %>
      <div class="name">
        <div class="name-content">
          <div class="username">
            <%= link_to event.user.username, profile_path(event.user.username) %>
          </div>
          <%= event.name %>
        </div>
        <div class="comments" id="comments_<%= event.id %>">
          <% if event.comments.any? %>
          <div class="paginator" id="#comments-paginator-<%= event.id %>">
            <% unless event.comments.count <= 4 %>
            <%= link_to "view all #{event.comments.count} comments", event_comments_path(event), remote: true, class: 'more-comments', data: {event_id: "#{event.id}", type: "html"} %>
            <% end %>
          </div>
          <%= render event.comments.last(4), event: event %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="comment-like-form row">
      <div class="like-button col-xs-1">
        <%= link_to '', like_event_path(event.id), remote: true,
                        id: "like_#{event.id}",
                        class: "glyphicon #{liked_event event}" %>
      </div>
      <div class="comment-form col-xs-11">
        <%= form_for([event, event.comments.build], remote: true) do |f| %>
        <%= f.text_field :content, placeholder: 'Add a comment...', class: "comment_content", id: "comment_content_#{event.id}" %>
        <% end %>
      </div>
    </div>
  </div>
</div>