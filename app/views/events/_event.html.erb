<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card hoverable">
      <div class="card-image">
        <%= link_to (image_tag event.image.url(:medium), class:'img-responsive'), event_path(event) %>
      </div>
      <div class="card-content">
      <%= fa_icon "calendar" %> <%= event.date %> <%= event.event_time %>
      <%= event.name %>
      <%= fa_icon "map-marker" %> <%= event.location %>
      <%= fa_icon "user" %> <%= link_to event.user.username, profile_path(event.user.username) %>
      </div>
      <div class="card-action">
        <%= link_to "Register", new_event_attendee_path(event), id: "register_#{event.id}" %>
        <%= link_to "More Info", event_path(event) %>
      </div>
    </div>
  </div>
</div>