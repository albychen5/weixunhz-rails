<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <!-- Content section -->
        <div class="row">
          <div class="col-xs-4">
            <%= link_to (image_tag event.image.url(:medium), class:'img-responsive'), event_path(event) %>
          </div>
          <div class="col-xs-8">
            <span class="event-name"><%= event.name %></span><br>
            <%= fa_icon "map-marker" %> <%= event.location %><br>
            <%= fa_icon "calendar" %> <%= event.date %> <%= event.event_time %><br>
          </div>
        </div>
        <hr>
        <!-- Action footer section -->
        <div class="row">
          <div class="col-xs-4">
            <%= fa_icon "user" %> <%= link_to event.user.username, profile_path(event.user.username) %>
          </div>
          <div class="col-xs-8 text-right">
            <% if user_signed_in? && current_user == event.user %>
              <%= link_to "Edit", edit_event_path(event), class:"btn btn-primary btn-sm" %>
            <% end %>
            <%= link_to "Discussion", event_path(event), class:"btn btn-primary btn-sm" %>
            <%= link_to "Register", new_event_attendee_path(event), id: "register_#{event.id}", class:"btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>