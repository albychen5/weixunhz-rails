<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-image">
        <%= link_to (image_tag event.image.url(:medium), class:'img-responsive'), event_path(event) %>
        <span class="card-title"><%= event.name %></span>
      </div>
      <div class="card-content">
        <p>Organizer: <%= link_to returns_event_owner(event.user_id).username, profile_path(returns_event_owner(event.user_id).username) %></p>
        <p>Location: <%= info_not_specified(event, event.location) %></p>
        <p>Date: <%= info_not_specified(event, event.date) %></p>
        <p>Time: <%= info_not_specified(event, event.event_time) %></p>
        <p>Details: <%= info_not_specified(event, event.details) %></p>
        <p>Created: <%= time_ago_in_words event.created_at %></p>
      </div>
      <div class="card-action">
        <a href="#">Attend</a>
        <a href="#">Interested</a>
        <a href="#">More Info</a>
      </div>
    </div>
  </div>
</div>

<div class="events-wrapper">
  <div class="event">
    <div class="event-head">
      <div class="thumb-img"></div>
      <div class="username">
        <%#= link_to event.user.username, profile_path(event.user.username) %>
      </div>
      <div class="time-ago">
        <%= time_ago_in_words event.created_at %>
      </div>
    </div>
    <div class="image center-block">
      <%= link_to (image_tag event.image.url(:medium), class:'img-responsive'), event_path(event) %>
    </div>
    <div class="event-bottom">
      <%= render 'events/likes', event: event %>
      <div class="name">
        <div class="name-content">
          <div class="username">
            Organizer: <%= link_to returns_event_owner(event.user_id).username, profile_path(returns_event_owner(event.user_id).username) %><br>
          </div>
          Event Name: <%= event.name %><br>
          Location: <%= info_not_specified(event, event.location) %><br>
          Date: <%= info_not_specified(event, event.date) %><br>
          Time: <%= info_not_specified(event, event.event_time) %><br>
          Details: <%= info_not_specified(event, event.details) %><br>
        </div>
        <div class="comments" id="comments_<%= event.id %>">
          <% if event.comments.any? %>
          <div class="paginator" id="#comments-paginator-<%= event.id %>">
            <% unless event.comments.count <= 4 %>
            <%= link_to "view all #{event.comments.count} comments", event_comments_path(event), remote: true, class: 'more-comments', data: {event_id: "#{event.id}", type: "html"} %>
            <% end %>
          </div>
          <%= render event.comments.last(4), event: event %>
          <% end %>
        </div>
      </div>
    </div>
    <% if user_signed_in? %>
      <div class="comment-like-form row">
        <div class="like-button col-xs-1">
        <% if current_user.liked? event %>
          <%= link_to '', unlike_event_path(event.id), remote: true,
                          id: "like_#{event.id}",
                          class: "like glyphicon glyphicon-heart" %>
        <% else %>
          <%= link_to '', like_event_path(event.id), remote: true,
                          id: "like_#{event.id}",
                          class: "like glyphicon glyphicon-heart-empty" %>
        <% end %>
        </div>
        <div class="comment-form col-xs-11">
          <%= form_for([event, event.comments.build], remote: true) do |f| %>
            <%= f.text_field :content, placeholder: 'Add a comment...', class: "comment_content", id: "comment_content_#{event.id}" %>
          <% end %>
        </div>
      </div>
      <div class="text-center"> <!-- ==== TODO GET ATTEND LINK WORKING === -->
        <%# if current_user_is_attending(current_user.id, event.id) %>
          <%#= link_to "Attending", unattend_event_path(event), remote: true, class: 'btn unfollow-button', id: "unattend_#{event.id}", method: :post %>
        <%# else %>
          <%#= link_to "Not Attending", attend_event_path(event), remote: true, class: 'btn follow-button', id: "attend_#{event.id}", method: :post %>
        <%# end %>

        <%= link_to "Register for this event", new_registration_path(event), class: 'btn follow-button', id: "register_#{event.id}" %>
      </div>
    <% end %>
  </div>
</div>